{
  "name": "@getcircuit/components",
  "version": "0.0.36",
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "types": "types/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "files": [
    "cjs/",
    "esm/"
  ],
  "scripts": {
    "clear": "npx rimraf ./{dist}/",
    "storybook:dev": "start-storybook -p 6006",
    "storybook:build": "build-storybook",
    "prebuild": "npm run clear",
    "build:types": "tsc -p tsconfig.types.json",
    "build": "rollup -c",
    "type-check": "tsc --noEmit",
    "lint": "eslint --ext js,jsx,ts,tsx .",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json}\"",
    "test": "jest",
    "prepublishOnly": "run-s test build",
    "postpublish": "npm run clear"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx,mdx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "@babel/preset-typescript": "^7.13.0",
    "@kiwi/eslint-config": "^1.11.3",
    "@kiwi/prettier-config": "^1.11.3",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@types/jest": "^26.0.21",
    "babel-jest": "^26.6.3",
    "eslint": "^7.22.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "rollup": "^2.41.4",
    "typescript": "^4.2.3"
  },
  "dependencies": {}
}
